[colors]
background = #282A2E
background-alt = #373B41
foreground = #C5C8C6
primary = #F0C674
secondary = #8ABEB7
alert = #A54242
disabled = #707880

[bar/mybar]
override-redirect = true ;its not working
bottom = true
wm-restack = i3
width = 100%
height = 24pt
radius = 0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3pt

border-size = 0pt
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin = 1

tray-position = right
tray-maxsize = 20

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

separator = "/"
separator-foreground = ${colors.disabled}

font-0 = monospace:size=11
font-1 = "FontAwesome"

;MODULES LAYOUT
modules-left = xworkspaces xwindow
modules-center = xkeyboard date
modules-right = memory cpu network pulseaudio-control-output pulseaudio-control-input

[module/pulseaudio-control-output]
type = custom/script
exec = ~/.config/polybar/pulseaudio-control.sh  --format '${VOL_LEVEL}% $NODE_NICKNAME' --node-nicknames-from "device.description" listen
format-underline = ${colors.cyan}
tail = true
label-padding = 0
label-foreground = ${colors.foreground}
click-right = exec pavucontrol &
click-left = ~/.config/polybar/pulseaudio-control.sh togmute
click-middle = ~/.config/polybar/pulseaudio-control.sh next-node
scroll-up = ~/.config/polybar/pulseaudio-control.sh --volume-max 130 up
scroll-down = ~/.config/polybar/pulseaudio-control.sh --volume-max 130 down

[module/pulseaudio-control-input]
type = custom/script
exec = ~/.config/polybar/pulseaudio-control.sh  --node-type input --format '${VOL_LEVEL} $NODE_NICKNAME' --node-nicknames-from "device.description" listen
tail = true
format-underline = ${colors.cyan}
label-padding = 0
label-foreground = ${colors.foreground}
click-right = exec pavucontrol &
click-left = ~/.config/polybar/pulseaudio-control.sh --node-type input togmute
;									all monitors and portable speaker
click-middle = ~/.config/polybar/pulseaudio-control.sh --node-blacklist "*.monitor","bluez_input.F1:16:44:9C:55:30" --node-type input next-node 
scroll-up = ~/.config/polybar/pulseaudio-control.sh --node-type input --volume-max 130 up
scroll-down = ~/.config/polybar/pulseaudio-control.sh --node-type input --volume-max 130 down

[module/hackspeed]
type = custom/script
exec = ~/.config/polybar/hackspeed.sh
tail = true

[module/xworkspaces]
type = internal/xworkspaces

label-active = %name%
label-active-background = ${colors.background-alt}
label-active-underline= ${colors.primary}
label-active-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:12:..%

[module/xkeyboard]
type = internal/xkeyboard

# label-layout =
label-layout-padding = 0
label-layout-underline = ${colors.secondary}

[module/memory]
type = internal/memory
interval = 5
format = <label>
; format with bar
; format = <label> <bar-used>
bar-used-indicator = 
bar-used-width = 8
bar-used-foreground-0 = #55aa55
bar-used-foreground-1 = #557755
bar-used-foreground-2 = #f5a70a
bar-used-foreground-3 = #ff5555
bar-used-fill = ▐
bar-used-empty = ▐
bar-used-empty-foreground = #444444
label = %gb_used:0:4:%/%gb_total:0:4:%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "cpu "
label = %percentage:2%%

[module/wired-network]
type = internal/network
interface = enp37s0
format-connected = <label-connected>
label-connected = %downspeed:3% %upspeed:3%
label-disconnected = not connected
label-disconnected-foreground = #66ffff

[module/network]
type = custom/script
exec = ~/.config/polybar/ipfinder.sh
tail = true

; https://github.com/polybar/polybar-scripts/tree/master/polybar-scripts/player-mpris-tail
[module/music]
type = custom/script
exec = ~/.config/polybar/player-mpris-tail.py -f '{icon} {:artist:t15:{artist}:} - {:title:t20:{title}:}' --icon-playing  --icon-paused  --icon-stopped  --icon-none ''
tail = true
click-left = ~/.config/polybar/player-mpris-tail.py previous &
click-right = ~/.config/polybar/player-mpris-tail.py next &
click-middle = ~/.config/polybar/player-mpris-tail.py play-pause &

; https://github.com/polybar/polybar/wiki/Module:-date
[module/date]
type = internal/date
interval = 1

date = %d %a
date-alt = %Y/%m/%d
time = %H:%M:%S

label = %date% %time%
label-foreground = ${colors.primary}

[settings]
screenchange-reload = true
pseudo-transparency = true
